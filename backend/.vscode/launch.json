{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Django Debugger",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "python": "${workspaceFolder}/venv/bin/python",
      "args": ["runserver", "0.0.0.0:8000"],
      "django": true,
      "autoReload": {
        "enable": true
      }
    },
    {
      "name": "Python: Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "python": "${workspaceFolder}/venv/bin/python",
      "args": ["runsslserver"],
      "console": "integratedTerminal"
    }
  ]
}
